        </section> 
    <% } %> 
    <% if (isOpenApp == 1 && isWx) { %>  
    <section class="alert-tip">
        <% if (appState == 'android') { %> 
            <img src="/images/phone/android.png" alt="">
        <% } %> 
        <% if (appState == 'ios') { %> 
            <img src="/images/phone/ios.png" alt="">
        <% } %> 
    </section>
    <% } %> 
    <script>
        $(function(){                 
            if (/(iPhone|iPad|iPod|iOS)/i.test(navigator.userAgent)) {  //判断iPhone|iPad|iPod|iOS
                 $('.downLoad-btn').attr('data-href','https://itunes.apple.com/cn/app/%E7%9C%9F%E5%AE%9C%E7%AD%BE/id1237561078?mt=8')
            } 
            if(/(Android)/i.test(navigator.userAgent)) {   //判断Android
               $('.downLoad-btn').attr('data-href','http://a.app.qq.com/o/simple.jsp?pkgname=com.gdca.cloudsign')
            }

            $('.downLoad-btn').on('click',function(){
                var hrefLink = $(this).attr('data-href');
                window.location.href = hrefLink;
            })

             /*自动打开app*/
             var hrefUrl = window.location.href;
            if(hrefUrl.indexOf('/t') != -1){
                $("#tip").show();
                $(".model-alert").on("touchmove",function(event){
                    event.preventDefault;
                }, false)
            };
            $("#cancel-btn").on('click',function(){
                $('#tip').hide();
            })
            var AppUrl = {
                AndroidOpen: 'cloudsign://',
                iosOpen:'GDCASign://opensign',  //wechat://  GDCASign://opensign
                AndroidDown: 'http://a.app.qq.com/o/simple.jsp?pkgname=com.gdca.cloudsign',
                IOSDown: 'https://itunes.apple.com/cn/app/%E7%9C%9F%E5%AE%9C%E7%AD%BE/id1237561078?mt=8'
            };
            if(navigator.userAgent.match(/(iPhone|iPod|iPad);?/i))
            {
               $("#openApp").on('click',function(){
                   $("#tip").hide();
                    window.location.href = AppUrl.iosOpen;				//ios app协议
                
                    var timer = window.setTimeout(function() {
                        window.location.href = AppUrl.IOSDown;		//ios 下载地址
                    }, 2000);
                    
                    $(document).on('visibilitychange webkitvisibilitychange', function() {
                        var tag = document.hidden || document.webkitHidden;
                        if (tag) {
                            clearTimeout(timer);
                        }
                    });
                    $(window).on('pagehide', function() {
                        clearTimeout(timer);
                    });
               })
            }
            
            if(navigator.userAgent.match(/android/i))
            {
                $("#openApp").on('click',function(){
                    $("#tip").hide();
                    window.location.href = AppUrl.AndroidOpen	//android app协议

                    var timer = window.setTimeout(function() {
                        window.location.href = AppUrl.AndroidDown;	//android 下载地址
                    }, 2000);                    
                    $(document).on('visibilitychange webkitvisibilitychange', function() {
                        var tag = document.hidden || document.webkitHidden;
                        if (tag) {
                            clearTimeout(timer);
                        }
                    });
                    $(window).on('pagehide', function() {
                        clearTimeout(timer);
                    });
                })
            }
        })
    </script>
